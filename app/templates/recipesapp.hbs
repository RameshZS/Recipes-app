{{page-title "Recipesapp"}}
<div id="banner-container">
  <NavbarContainer></NavbarContainer>
</div>
<div class="category_container" id="category_container">
    <h4 id="cate_title">CATEGORIES</h4>
  <div class="category">
    {{#each this.categoryData as |item|}}
          <div id="{{item.categoryName}}_div">
          <div id="{{item.categoryName}}_pic1" class="category_images" style="background-image: url({{item.image}})">
            <h4 id="{{item.categoryName}}_title">{{item.categoryName}}</h4>
          </div>
          <p class="about_food">{{item.description}}</p>
          <LinkTo @route='category-page' @model={{item.id}} class="go_button_link"><button type="button" class="go_to_Button">GO TO<i class="fa fa-arrow-circle-right" aria-hidden="true"></i></button></LinkTo>
      </div>
    {{/each}}
  </div>
</div>
<div class="recipe_container" id="recipe_container">
  <h4 id="recipe_title">RECIPES</h4>
       <RecipesContainer @data={{this.model}} >
       </RecipesContainer>
</div>
