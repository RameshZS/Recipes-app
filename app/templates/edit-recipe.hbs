{{page-title "EditRecipe"}}
<div class="Edit_container">
    <div class="Edit_box">
        <h1>EDIT BOX</h1>
      <div class="edit_input_box">
       <h3>Recipe Name :</h3>
       {{input type="text" name="time" value=this.model.recipe_name }}
      </div>
       <div class="edit_input_box">
       <h3>Full Preparation time :</h3>
       {{input type="text" value=this.model.time data=this.time }}
      </div>
       <div class="edit_input_box">
       <h3>Paste image URL :</h3>
       {{input type="text" value=this.model.image }}
      </div>
       <div class="edit_input_box">
       <h3>Select Food category:</h3>
       <CategorySelectTagContainer @data={{this.selectTagData.categoryType}} @value={{this.value}}></CategorySelectTagContainer>
      </div>
      <div class="edit_input_box">
          <h3>Recipe Ingredients(using coma) :</h3>
          {{textarea id="textarea" cols="30" rows="5"  value=this.model.ingredients }}
      </div>
      {{#each  this.model.timeManageMent as |timeManageMent|}}
           <div class="edit_input_box">
          <h3>Preparation time :</h3>
          {{input type="text" value=timeManageMent.prep }}
      </div>
       <div class="edit_input_box">
          <h3>Cooking time :</h3>
          {{input type="text" value=timeManageMent.cook }}
      </div>
      {{/each}}
      <div class="edit_input_box">
       <h3>Difficulty Level:</h3>
       <SelectTagContainer @data={{this.selectTagData.level}} @value={{this.value}}></SelectTagContainer>
      </div>
      <div class="edit_input_box">
       <h3>Rating of the recipe:</h3>
       <SelectTagContainer @data={{this.selectTagData.Rating}} @value={{this.value}}></SelectTagContainer>
      </div>
      <button type="button" {{action this.editRecipe }}>EDIT</button>
    </div>
</div>
{{outlet}}